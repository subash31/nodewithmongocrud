<h3>{{viewTitle}}</h3>

<form action="/books" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{books._id}}">
    <div class="form-group">
        <label>Book Name</label>
        <input type="text" class="form-control" name="BookName" placeholder="Book Name" value="{{books.BookName}}">
        <div class="text-danger">
            {{books.BookNameError}}</div>
    </div>
    <div class="form-group">
        <label>Author</label>
        <input type="text" class="form-control" name="Author" placeholder="Author" value="{{books.Author}}">
        <div class="text-danger">
            {{books.AuthorError}}</div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Bookid</label>
            <input type="text" class="form-control" name="id" placeholder="id" value="{{books.Bookid}}">
        </div>
        <div class="form-group col-md-6">
            <label>Price</label>
            <input type="text" class="form-control" name="price" placeholder="price" value="{{books.Price}}">
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/books/list"><i class="fa fa-list-alt"></i> View All</a>
    </div>
</form>